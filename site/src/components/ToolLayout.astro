---
import Layout from '../layouts/Layout.astro';
interface Props {
  title: string;
  description: string;
  icon: string;
  category: string;
  categorySlug: string;
}
const { title, description, icon, category, categorySlug } = Astro.props;
---
<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 py-10">
    <nav class="text-sm text-gray-400 mb-6">
      <a href="/" class="hover:text-[#FF6B35]">Home</a> &rsaquo;
      <a href={`/categories/${categorySlug}`} class="hover:text-[#FF6B35]">{category}</a> &rsaquo;
      <span class="text-gray-600">{title}</span>
    </nav>
    <div class="flex items-center gap-3 mb-4">
      <span class="text-4xl">{icon}</span>
      <h1 class="text-3xl md:text-4xl font-bold text-[#1B4965]">{title}</h1>
    </div>
    <p class="text-gray-500 mb-8 text-lg">{description}</p>
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 md:p-8">
      <slot name="calculator" />
    </div>
    <div class="mt-12 prose prose-lg max-w-none text-[#4A4A4A]">
      <slot name="content" />
    </div>
  </div>
</Layout>
